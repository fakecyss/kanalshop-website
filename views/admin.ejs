<%- include('partials/header') %>

<h2>Admin Panel</h2>

<a href="/admin/add" class="btn btn-success mb-3">Add New Product</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(product => { %>
            <tr>
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= product.category %></td>
                <td>$<%= product.price.toFixed(2) %></td>
                <td>
                    <a href="/admin/edit/<%= product.id %>" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/admin/delete/<%= product.id %>" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('partials/footer') %>